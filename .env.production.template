# Production Environment Variables for Local Testing
# Copy this file to .env.production.local and customize the values

# Required for Rails production
SECRET_KEY_BASE=your-secret-key-base-for-local-production-testing-replace-this-with-real-secret

# If you have a master key file, set this
# RAILS_MASTER_KEY=your-master-key-from-config/master.key

# Google Maps API (if used)
# GOOGLE_MAPS_API_TOKEN=your-google-maps-api-token

# Asset host (if using CDN in production)
# ASSET_HOST=your-cdn-host.com

# Database URL (already set in docker-compose.production.yml, but can be overridden)
# DATABASE_URL=postgres://postgres:postgres@postgres-prod:35433/linkvan_production

# Other production settings
RAILS_SERVE_STATIC_FILES=enabled
RAILS_LOG_TO_STDOUT=enabled
