#!/bin/bash
set -e

# Pass all arguments to the rspec command inside docker
if [ $# -eq 0 ]; then
    # No arguments provided, run all tests
    docker-compose -f docker-compose.ci.yml -p linkvan-test run --rm test
else
    # Arguments provided, pass them to rspec
    docker-compose -f docker-compose.ci.yml -p linkvan-test run --rm test bash -c "./bin/setup && yarn build:css && ./bin/bundle exec rspec $*"
fi
