<nav class="container">
    <div class="level">
        <div class="level-left">
            <h1 class="title">
                Tools
            </h1>
        </div>
    </div>
</nav>

<hr/>
<div class="container">
    <%= render Shared::CardComponent.new(title: "Vancouver City API") do |card| %>
        <div class="content">
            <p class="mb-4">Import facilities from Vancouver City's Open Data API. Select an API endpoint and the type of service to associate with the imported facilities.</p>
            
            <%= form_with url: import_facilities_admin_tools_path, method: :post, class: "form" do |form| %>
                <div class="field">
                    <%= form.label :api, "API Endpoint", class: "label" %>
                    <div class="control">
                        <div class="select is-fullwidth">
                            <%= form.select :api, 
                                options_for_select(api_options_for_select), 
                                { include_blank: false }, 
                                { class: "select", required: true } %>
                        </div>
                    </div>
                    <p class="help">Choose which facilities to import from Vancouver City's Open Data API.</p>
                </div>

                <div class="field">
                    <div class="control">
                        <%= form.submit "Import Facilities", class: "button is-primary" %>
                    </div>
                </div>
            <% end %>
        </div>
    <% end %>
</div>
