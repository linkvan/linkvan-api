<%= render Shared::CardComponent.new(title: 'Current Address') do |card| %>
    <% card.with_action_content do %>
        <!-- Action Buttons -->
        <div class="field mr-4 is-grouped is-grouped-right">
            <p class="control mr-1">
            <%= form.submit class: "button is-primary" %>
            </p>
            <p class="control">
            <%= link_to "Back", admin_facility_path(id: facility.id), class: "button is-light" %>
            </p>
        </div>
    <% end %>

    <div class="field">
        <%= form.label :address, "Address:", class: "label" %>
        <div class="control">
            <%= form.text_field :address, class: "input" %>
        </div>
    </div>

    <!-- Location -->
    <div class="field is-grouped">
        <div class="control is-expanded">
            <%= form.label :lat, "Lat:", class: "label" %>
            <p class="control">
            <%= form.text_field :lat, placeholder: "Lat", class: "input" %>
            </P>
        </div>

        <div class="control is-expanded">
            <%= form.label :long, "Long:", class: "label" %>
            <div class="control">
                <%= form.text_field :long, placeholder: "Long", class: "input" %>
            </div>
        </div>
    </div>

    <div class='container'>
        <div style="width: 100%; margin-top: 50px;">
            <%= render Locations::EmbedMapComponent.new(facility.lat, facility.long) %>
        </div>
    </div>
<% end %>

